{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "incremental": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "lib": [
      "ES2022"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "./src",
    "./tests"
  ]
}
